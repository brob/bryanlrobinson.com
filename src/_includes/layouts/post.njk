{% extends "layouts/base.njk" %}
{% set contentClass = "post-content" %}



{% block banner %}
<h1 class="banner__title">{{ title }}</h1>
{% if subhead %}
    <h2>{{ subhead }}</h2>
{% endif %}
<time datetime="{{ page.date | date('YYYY-MM-DD') }}">{{ page.date | date('MMMM D, YYYY') }}</time>
{% if categories %}
<ul class="category-list">
{% for category in categories %}
<li class="category-list__item"><a class="category-list__link" href="/blog/category/{{ category | slug }}">{{ category }}</a></li>

{% endfor %}
</ul>
{% endif %}
{% endblock banner %}

{% block mainContent %}

<section class="blog-content">

    {{ content | safe }}

    {% include "webmentionlist.njk" %}


    <aside class="blog-related" {% if sidebarOverride %}style="--aside-height: {{ sidebarOverride }};"{% endif %}>       
    {% block related %}
        {% if adSpace %}
            <div class="adspace">
                <h3>A quick promo</h3>
                {% if adSpace.linkUrl %}
                    <a href="{{ adSpace.linkUrl }}">
                {% endif %}
                {% set promoAlt %}
                    Promo Image for {{ adSpace.headline }}
                {% endset %}
                {% respimg
                    adSpace.image,
                    promoAlt,
                    "(min-width: 48em) 48em, 100vw"
                %}

                {% if adSpace.headline %}
                    <h4>{{ adSpace.headline }}</h4>
                {% endif %}
                {% if adSpace.linkUrl %}
                    </a>
                {% endif %}
            </div>
        {% endif %}
        
        {% set related = collections.posts | related("categories", categories, 2, page.fileSlug) %}
        {% if related | length > 1 %}
        <h3>Related stuff</h3>          
        <ul class="related-list">
        
            {% for post in related | limit(3)  %}
            <li class="related-list__item">
                <a href="{{ post.url }}">{{ post.data.title }}</a>
            </li>
            {% endfor %}
        </ul>
        {% endif %}
    {% endblock related %}
    <script async type="text/javascript" src="//cdn.carbonads.com/carbon.js?serve=CE7D6KQ7&placement=bryanlrobinsoncom" id="_carbonads_js"></script>

    </aside>
</section>


{% endblock %}

{% block footerJs %}
<script type="application/ld+json">
{
  "@context": "http://schema.org",
  "@type": "NewsArticle",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "{{ site.url }}{{ page.url }}"
  },
  "headline": "{{ title }}",
  {% if featuredImg %}
  "image": {
    "@type": "ImageObject",
    "url": "{{ site.url }}{{ featuredImg }}",
    "height": 800,
    "width": 800
  },
  {% endif %}
  "datePublished": "{{ page.date }}",
  "author": {
    "@type": "Person",
    "name": "Bryan L. Robinson"
  },
   "publisher": {
    "@type": "Organization",
    "name": "Bryanlrobinson.com",
    "logo": {
      "@type": "ImageObject",
      "url": "{{ site.url }}/images/logo.png",
      "width": 70,
      "height": 20
    }
  },
  "description": "{{ description | escape }}"
}
</script>
{% endblock footerJs %}